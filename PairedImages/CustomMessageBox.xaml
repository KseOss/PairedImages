<Window x:Class="PairedImages.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PairedImages"
        mc:Ignorable="d"
        Title="Игра завершена" Height="400" Width="500" 
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" Background="#16172B"
        BorderBrush="#7E83F0" BorderThickness="2">
    <Grid>
        <Image Source="/Images/Зерно.png" Stretch="Fill" Opacity="0.7"/>

        <Border Background="#16172B" BorderBrush="#7E83F0" BorderThickness="1" 
                Margin="20" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Label Grid.Row="0" Content="{Binding Title}" HorizontalAlignment="Center" 
                       Foreground="#7E83F0" FontSize="28" FontWeight="Bold" 
                       Margin="0,20,0,10" Style="{StaticResource MM}"/>

                <!-- Сообщение -->
                <TextBlock Grid.Row="1" Text="{Binding Message}" HorizontalAlignment="Center" 
                          VerticalAlignment="Center" Foreground="White" FontSize="20" 
                          TextAlignment="Center" Margin="20" Style="{StaticResource ML}"/>

                <!-- Статистика -->
                <TextBlock Grid.Row="2" Text="{Binding Stats}" HorizontalAlignment="Center" 
                          VerticalAlignment="Center" Foreground="#BEBEBE" FontSize="18" 
                          TextAlignment="Center" Margin="20,0,20,10" Style="{StaticResource ML}"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="0,20,0,30">
                    <Button Content="ИГРАТЬ СНОВА" FontSize="16" Style="{StaticResource MM}" 
                            Background="Transparent" BorderBrush="#7E83F0" BorderThickness="2" 
                            Foreground="#D7D7D7" Margin="5" Padding="15,5" 
                            Click="PlayAgain_Click" Cursor="Hand"/>
                    <Button Content="ГЛАВНОЕ МЕНЮ" FontSize="16" Style="{StaticResource MM}" 
                            Background="Transparent" BorderBrush="#7E83F0" BorderThickness="2" 
                            Foreground="#D7D7D7" Margin="5" Padding="15,5" 
                            Click="MainMenu_Click" Cursor="Hand"/>
                    <Button Content="ВЫЙТИ" FontSize="16" Style="{StaticResource MM}" 
                            Background="Transparent" BorderBrush="#7E83F0" BorderThickness="2" 
                            Foreground="#D7D7D7" Margin="5" Padding="15,5" 
                            Click="Exit_Click" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>